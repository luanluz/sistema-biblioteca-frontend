{
    "name": "sistema-biblioteca-frontend",
    "version": "1.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "lint": "ng lint",
        "lint:fix": "eslint . --ext .ts,.html --fix",
        "format": "prettier --write \"**/*.{ts,html,scss,css,js,json,md}\""
    },
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "overrides": [
            {
                "files": "*.html",
                "options": {
                    "parser": "angular"
                }
            }
        ]
    },
    "private": true,
    "dependencies": {
        "@angular-eslint/eslint-plugin": "^20.6.0",
        "@angular/common": "^20.3.0",
        "@angular/compiler": "^20.3.0",
        "@angular/core": "^20.3.0",
        "@angular/forms": "^20.3.0",
        "@angular/platform-browser": "^20.3.0",
        "@angular/router": "^20.3.0",
        "@eslint/js": "^9.39.1",
        "@primeng/themes": "^20.3.0",
        "@primeuix/themes": "^1.2.5",
        "@tailwindcss/postcss": "^4.1.17",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "ngx-mask": "^20.0.3",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "primeicons": "^7.0.0",
        "primeng": "^20.3.0",
        "rxjs": "~7.8.0",
        "tailwindcss": "^4.1.17",
        "tailwindcss-primeui": "^0.6.1",
        "tslib": "^2.3.0",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular/build": "^20.3.10",
        "@angular/cli": "^20.3.10",
        "@angular/compiler-cli": "^20.3.0",
        "@angular/localize": "^20.3.12",
        "@types/jasmine": "~5.1.0",
        "angular-eslint": "20.6.0",
        "eslint": "^9.39.0",
        "jasmine-core": "~5.9.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "typescript": "~5.9.2",
        "typescript-eslint": "8.46.3"
    }
